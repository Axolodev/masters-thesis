{
  "workbench.colorTheme": "GitHub Dark",
  "[latex]": {
    "editor.formatOnSave": false
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.tex$",
        "cmd": "tex-fmt ${file}"
      }
    ]
  },
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex, biber, makeglossaries, pdflatex (2x)",
      "tools": ["pdflatex", "biber", "makeglossaries", "pdflatex", "pdflatex"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-shell-escape",
        "-output-directory=%DIR%/out",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "--input-directory=%DIR%/out",
        "--output-directory=%DIR%/out",
        "%DOCFILE%"
      ]
    },
    {
      "name": "makeglossaries",
      "command": "makeglossaries",
      "args": ["-d%DIR%/out", "%DOCFILE%"]
    }
  ],
  "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^|%|\\\\)\\s*($TAGS)\\{*|^\\s*- \\[ \\])"
}
